{
  "compilerOptions": {
    "target": "es2016",                                  /* Set the JavaScript language version for emitted JavaScript. */
    "module": "commonjs",                                /* CommonJS modules are suitable for Node.js applications. */
    "outDir": "./build",                                 /* Output directory for all emitted files. */
    "rootDir": "./src",                                  /* Root directory of your source files. */
    "esModuleInterop": true,                             /* Enables emit interoperability between CommonJS and ES Modules. */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent casing in user code imports. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "typeRoots": ["node_modules/@types", "@types"],      /* Specify folders that contain type definitions. */
    "skipLibCheck": true                                 /* Skip type checking of all declaration files (*.d.ts). */
  },
  "include": [
    "src/**/*"                                           /* Include all files in the src directory. */
  ],
  "exclude": [
    "node_modules",                                      /* Exclude the node_modules directory. */
    "**/*.spec.ts"                                       /* Exclude test files. */
  ]
}
